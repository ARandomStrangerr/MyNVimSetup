{
  "languageserver": {
  	"clangd": {
    	"command": "clangd",
    	"rootPatterns": ["compile_flags.txt", "compile_commands.json"],
    	"filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
			"arguments": [
				"--std=c+=11",
				"--compile-commands-dir=${workspaceFolder}"
			]
  	},
		"pyright": { 
			"pythonPath": "python",
			"venvPath": "./venv",
			"analysis.autoSearchPaths": true
		}
	}
}

